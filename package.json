{
  "name": "habita-backend",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "migration:create": "typeorm-ts-node-commonjs migration:create src/db/migrations/NewMigration",
    "migration:generate": "typeorm-ts-node-commonjs -d src/db/data-source.ts migration:generate src/db/migrations/AutoMigration",
    "migration:run": "typeorm-ts-node-commonjs -d src/db/data-source.ts migration:run",
    "migration:revert": "typeorm-ts-node-commonjs -d src/db/data-source.ts migration:revert"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^5.2.1",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.26",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.4",
    "@types/node": "^24.3.1",
    "@types/pg": "^8.15.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.3"
  }
}
